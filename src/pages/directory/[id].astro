---
import MainLayout from '@/layouts/MainLayout.astro';
import PromptDetail from '@/components/prompts/PromptDetail';
import { Button } from '@/components/ui/button';
import { ArrowLeft } from 'lucide-react';

import promptsData from '@/data/prompts.json';

export async function getStaticPaths() {
  const prompts = promptsData;
  
  return prompts.map((prompt) => ({
    params: { id: prompt.id },
    props: { prompt },
  }));
}

const { prompt } = Astro.props;

// Handle 404 if prompt not found (additional safety check)
if (!prompt) {
  return Astro.redirect('/404');
}
---

<MainLayout title={`${prompt.title} | Church Prompt Directory`}>
  <div class="container py-8">
    <!-- Back Button -->
    <div class="mb-6">
      <a href="/directory" class="inline-flex items-center gap-2 text-sm text-muted-foreground hover:text-foreground transition-colors">
        <ArrowLeft className="h-4 w-4" />
        Back to Directory
      </a>
    </div>

    <!-- Prompt Detail Component -->
    <PromptDetail 
      client:load
      prompt={prompt}
      isSubscribed={true}
      isFavorite={false}
    />

    <!-- Related Prompts Section -->
    <div class="mt-12 pt-8 border-t">
      <div class="flex items-center justify-between mb-6">
        <div>
          <h2 class="text-2xl font-bold">More in this Category</h2>
          <p class="text-muted-foreground mt-1">Explore similar prompts</p>
        </div>
        <a href={`/directory?category=${prompt.category}`}>
          <Button variant="outline">
            View All
          </Button>
        </a>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {promptsData
          .filter((p) => p.category === prompt.category && p.id !== prompt.id)
          .slice(0, 3)
          .map((relatedPrompt) => (
            <a 
              href={`/directory/${relatedPrompt.id}`}
              class="block group"
            >
              <div class="card-hover h-full p-6 rounded-lg border bg-card">
                <h3 class="font-semibold mb-2 group-hover:text-primary transition-colors">
                  {relatedPrompt.title}
                </h3>
                <p class="text-sm text-muted-foreground line-clamp-2 mb-4">
                  {relatedPrompt.excerpt}
                </p>
                <div class="flex items-center gap-4 text-xs text-muted-foreground">
                  <span>{relatedPrompt.usageCount} uses</span>
                  <span>â€¢</span>
                  <span>by {relatedPrompt.authorName}</span>
                </div>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </div>
</MainLayout>
