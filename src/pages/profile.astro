---
import MainLayout from '@/layouts/MainLayout.astro';
import { ProfileWithProvider } from '@/components/profile/ProfileWithProvider';

const convexUrl = import.meta.env.PUBLIC_CONVEX_URL;
---

<MainLayout title="My Profile | Church Prompt Directory" description="View and manage your church prompt contributions and activity">
  <div class="container mx-auto px-4 py-8 max-w-6xl">
    <ProfileWithProvider 
      client:only="react" 
      convexUrl={convexUrl}
    />
  </div>
</MainLayout>
